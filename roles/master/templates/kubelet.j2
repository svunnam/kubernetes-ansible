# kubernetes kubelet config
KUBELET_ADDRESS="--address=0.0.0.0 --port=10250"

# pod infrastructure container
KUBELET_POD_INFRA_CONTAINER="--pod-infra-container-image=registry.access.redhat.com/rhel7/pod-infrastructure:latest"

# Add your own!
#KUBELET_ARGS="--kubeconfig={{ kubeadminconfig }} --require-kubeconfig=true --pod-manifest-path={{ manifest_config_dir }} --register-schedulable=false"
KUBELET_ARGS="--kubeconfig={{ kubeadminconfig }} --require-kubeconfig=true --pod-manifest-path={{ manifest_config_dir }}"

# set log
KUBE_LOGTOSTDERR="--logtostderr=true --v=0"

# Should this cluster be allowed to run privileged docker containers
KUBE_ALLOW_PRIV="--allow-privileged=true"

# kubelet network 
{% if flannel == 'false' -%}
KUBELET_NETWORK_ARGS="--network-plugin=cni --cni-conf-dir=/etc/cni/net.d --cni-bin-dir=/opt/cni/bin"
{% endif -%}

# kube dns 
KUBELET_DNS_ARGS="--cluster-dns={{ dns_ip }} --cluster-domain={{ cluster_name }}"
